{
    "name": "dystcz/lunar-api-newsletter",
    "description": "Add the possibility to sign up to newsletter lists to your Lunar backend",
    "keywords": [
        "dystopia",
        "lunar-api-newsletter",
        "lunar",
        "newsletter"
    ],
    "homepage": "https://github.com/dystcz/lunar-newsletter",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Jakub Theimer",
            "email": "jakub@dy.st",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "dystcz/lunar-api": "dev-main",
        "illuminate/support": "^10.0",
        "laravel-json-api/laravel": "^3.0",
        "laravel-json-api/non-eloquent": "^3.0",
        "lunarphp/lunar": "^0.3.0-beta",
        "spatie/laravel-newsletter": "^5.1",
        "vyuldashev/laravel-openapi": "^1.10.1"
    },
    "suggest": {
        "spatie/mailcoach-sdk-php": "For working with Mailcoach",
        "drewm/mailchimp-api": "For working with MailChimp"
    },
    "require-dev": {
        "drewm/mailchimp-api": "^2.5",
        "driftingly/rector-laravel": "^0.17.0",
        "laravel-json-api/testing": "^2.1",
        "laravel/pint": "^1.7",
        "mockery/mockery": "^1.5",
        "nunomaduro/larastan": "^2.5.1",
        "orchestra/testbench": "^8.0",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-faker": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "rector/rector": "^0.15.23",
        "spatie/laravel-ray": "^1.32",
        "spatie/mailcoach-sdk-php": "^1.1"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/lorinczdev/json-api"
        }
    ],
    "autoload": {
        "psr-4": {
            "Dystcz\\LunarNewsletter\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dystcz\\LunarNewsletter\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dystcz\\LunarNewsletter\\LunarNewsletterServiceProvider"
            ],
            "aliases": {
                "LunarNewsletter": "Dystcz\\LunarNewsletter\\LunarNewsletterFacade"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
