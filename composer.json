{
    "name": "dystcz/lunar-api-stripe-adapter",
    "description": "This is my package lunar-api-stripe-adapter",
    "keywords": [
        "dystcz",
        "lunar",
        "lunar-api",
        "lunar-api-stripe-adapter",
        "laravel",
        "php"
    ],
    "homepage": "https://github.com/dystcz/lunar-api-stripe-adapter",
    "license": "MIT",
    "authors": [
        {
            "name": "Jakub Theimer",
            "email": "jakub@dy.st",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "dystcz/lunar-api": "^0.6",
        "illuminate/contracts": "^10.0",
        "lunarphp/stripe": "^0.6"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^7.8",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^8.8",
        "pestphp/pest": "^2.0",
        "pestphp/pest-plugin-arch": "^2.0",
        "pestphp/pest-plugin-laravel": "^2.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "spatie/laravel-ray": "^1.26",
        "laravel-json-api/testing": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "Dystcz\\LunarApiStripeAdapter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dystcz\\LunarApiStripeAdapter\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-lunar-api-stripe-adapter --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dystcz\\LunarApiStripeAdapter\\LunarApiStripeAdapterServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
