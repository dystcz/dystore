{
    "name": "dystcz/dystore-stripe",
    "description": "Dystore Stripe payment adapter",
    "keywords": [
        "dystopia",
        "lunar",
        "dystore",
        "laravel",
        "php",
        "stripe"
    ],
    "homepage": "https://github.com/dystcz/dystore",
    "license": "MIT",
    "authors": [
        {
            "name": "Dystopia",
            "homepage": "https://dy.st/"
        }
    ],
    "require": {
        "php": "^8.2",
        "dystcz/lunar-api": "self.version",
        "illuminate/support": "^11.0",
        "lunarphp/stripe": "^1.0.0",
        "spatie/laravel-stripe-webhooks": "^3.6"
    },
    "autoload": {
        "psr-4": {
            "Dystore\\Stripe\\": "src"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Dystore\\Stripe\\StripeServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
